<configuration scan="true" scanPeriod=" 5 seconds">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="com.alibaba.polardbx.proxy.logger.ConsoleFilter"/>
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{56} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <appender name="ROOT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${loggerRoot:-..}/logs/proxy.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${loggerRoot:-..}/logs/%d{yyyy-MM-dd}/proxy-%d{yyyy-MM-dd}-%i.log.gz
            </fileNamePattern>
            <!-- each file should be at most 512MB, keep 30 days worth of history, but at most 60GB -->
            <maxFileSize>512MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>60GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{56} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <appender name="AsyncROOT" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>100000</queueSize>
        <maxFlushTime>3000</maxFlushTime>
        <discardingThreshold>0</discardingThreshold>
        <!-- 错误日志包含堆栈，内容太大，超过直接丢 -->
        <neverBlock>true</neverBlock>
        <appender-ref ref="ROOT"/>
    </appender>

    <appender name="SQL" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${loggerRoot:-..}/logs/sql.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${loggerRoot:-..}/logs/%d{yyyy-MM-dd}/sql-%d{yyyy-MM-dd}-%i.log.gz
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- or whenever the file size reaches 100MB -->
                <maxFileSize>512MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>7</maxHistory>
            <totalSizeCap>100GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <immediateFlush>true</immediateFlush>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} - [%X{CONNECTION}] %msg%n
            </pattern>
        </encoder>
    </appender>

    <appender name="asyncSQL" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>100000</queueSize>
        <maxFlushTime>3000</maxFlushTime>
        <discardingThreshold>0</discardingThreshold>
        <!-- 默认不阻塞，可能丢SQL日志 -->
        <neverBlock>true</neverBlock>
        <appender-ref ref="SQL"/>
    </appender>

    <logger name="sql" value="info" additivity="false">
        <appender-ref ref="asyncSQL"/>
    </logger>

    <root level="info">
        <appender-ref ref="AsyncROOT"/>
        <appender-ref ref="STDOUT"/>
    </root>

    <!-- Override the level of some loggers -->
    <logger name="io.grpc" level="INFO"/>
</configuration>
